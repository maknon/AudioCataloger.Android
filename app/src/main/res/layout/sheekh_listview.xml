<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText"
    android:descendantFocusability="blocksDescendants">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/baseline_folder_open_24"
        android:focusable="false"
        android:alpha="0.8"
        android:contentDescription="مجلد" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/listen"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/baseline_slideshow_24"
        android:focusable="false"
        android:alpha="0.8"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="استماع"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/download"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toStartOf="@+id/listen"
        android:layout_alignTop="@+id/listen"
        app:srcCompat="@drawable/baseline_save_alt_24"
        android:focusable="false"
        android:alpha="0.8"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="تحميل"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/tafreeg"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/outline_description_24"
        android:focusable="false"
        android:alpha="0.5"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="قراءة التفريغ"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tafreeg"
        app:srcCompat="@drawable/sharp_share_24"
        android:focusable="false"
        android:alpha="0.5"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="مشاركة مع"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_icon"
        android:layout_alignTop="@+id/item_icon"
        android:focusable="false"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="18sp"/>

</RelativeLayout>